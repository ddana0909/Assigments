@model IEnumerable<OrderManagement.Order>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Delete Order</h4>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this Order?</p>
            <br />
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">Order Details</div>
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <strong>
                                        @Html.DisplayNameFor(model => model.OrderID)
                                    </strong>
                                    @Html.DisplayFor(modelItem => item.OrderID)
                                </div>
                                <div class="form-horizontal">
                                    <strong>
                                        @Html.DisplayNameFor(model => model.Customer.CompanyName)
                                    </strong>
                                    @Html.DisplayFor(modelItem => item.Customer.CompanyName)
                                </div>
                                <div class="form-horizontal">
                                    <strong>
                                        @Html.DisplayNameFor(model => model.OrderDate)
                                    </strong>
                                    @Html.DisplayFor(modelItem => item.OrderDate)
                                </div>
                                <div class="form-horizontal">
                                    <strong>
                                        @Html.DisplayNameFor(model => model.ShippedDate)
                                    </strong>
                                    @Html.DisplayFor(modelItem => item.ShippedDate)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            }
        </div>
        <div class="modal-footer">
            @Html.ActionLink("Delete", "DeleteConfirmed", "Home", new { id = Model.FirstOrDefault().OrderID }, new { @class = "btn btn-danger" })
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>






