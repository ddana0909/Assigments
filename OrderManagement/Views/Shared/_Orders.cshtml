@model IEnumerable<OrderManagement.Order>
<head>
    <script src="/Scripts/jquery.js"></script>
    <script type="text/javascript" src="/Scripts/bootstrap.js"></script>
    
    <script type="text/javascript">
        $(function () {
            $("[rel=tooltip]").tooltip();
        });
    </script>
</head>

<table class="table table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.ContactName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Shipper.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Freight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShippingDetails)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.Customer.CompanyName)
            </td>
            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.Customer.ContactName)
            </td>
            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.Employee.LastName)
            </td>

            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.Shipper.CompanyName)
            </td>
            <td onclick=" getEmployeeDetails(@item.EmployeeID) " style="cursor: pointer">
                @Html.DisplayFor(modelItem => item.Freight)
            </td>
            <td>                                       
                <a title="@Html.DisplayFor(modelItem => item.ShipName)
                     @Html.DisplayFor(modelItem => item.ShipAddress)
                     @Html.DisplayFor(modelItem => item.ShipCity)      
                     @Html.DisplayFor(modelItem => item.ShipRegion)                 
                     @Html.DisplayFor(modelItem => item.ShipPostalCode)               
                     @Html.DisplayFor(modelItem => item.ShipCountry)"
                   data-html="true" 
                   data-toggle='tooltip' 
                   data-placement='left' >
                   @Html.DisplayFor(modelItem => item.ShippingDetails) 
                </a>               
            </td>
         
            <td id="optionSquare">
                @Html.ActionLink("Edit", "Edit", "Home", new {id = item.OrderID}, new {@class = "btn btn-default btn-xs"})
                 <button class="btn btn-default btn-xs" onclick=" showDeleteDialog(@item.OrderID) " style="cursor: pointer">Delete</button>
                @Html.ActionLink("Details", "Details", "Home", new {id = item.OrderID}, new {@class = "btn btn-default btn-xs"})
              
            </td>
        </tr>
    }
</table>
